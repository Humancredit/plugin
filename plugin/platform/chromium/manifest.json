{
    "manifest_version": 2,

    "name": "Humancredit",
    "version": "0.3.41",

    "default_locale": "en",
    "description": "With Humancredit you can liberate your screen from annoying ads and create donation value with ad‑interactions. Based on uBlock₀.",
    "icons": {
        "16": "img/icon_16.png",
        "128": "img/icon_128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/browsericons/icon19.png",
            "38": "img/browsericons/icon38.png"
        },
        "default_title": "Humancredit",
        "default_popup": "popup.html"
    },

    "author": "Humancredit gGmbH and all uBlock contributors",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/vapi-client.js", "js/contentscript-start.js"],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/contentscript-end.js", "js/humancredit-ui.js"],
            "run_at": "document_end",
            "all_frames": true
        },
        {
            "matches": [
                "https://*.adblockplus.org/*",
                "https://*.adblockplus.me/*",
                "https://www.fanboy.co.nz/*"
            ],
            "js": ["js/subscriber.js"],
            "run_at": "document_idle"
        }
    ],
    "incognito": "split",
    "minimum_chrome_version": "22.0",
    "options_page": "dashboard.html",
    "options_ui": {
        "page": "options_ui.html"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "img/*"
    ],
    "short_name": "Humancredit"
}
